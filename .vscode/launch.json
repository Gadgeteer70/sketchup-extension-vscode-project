  "version": "0.2.0",
  "configurations": [
    {
      "type": "ruby_lsp",
      "request": "attach",
      "name": "Attach to a debuggee"
    },
    {
      "type": "ruby_lsp",
      "request": "launch",
      "name": "Debug file",
      "program": "ruby ${file}"
    },
    {
      "type": "ruby_lsp",
      "request": "launch",
      "name": "Debug test file",
      "program": "ruby -Itest ${relativeFile}"
    },

    {
      "name": "Listen for rdebug-ide",
      "type": "Ruby",
      "request": "attach",
      "cwd": "${workspaceRoot}",
      "remoteHost": "127.0.0.1",
      "remotePort": "7000",
      "remoteWorkspaceRoot": "${workspaceRoot}"
    }
  ]
}
